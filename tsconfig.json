{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata", "jest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "jest.setup.js"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}